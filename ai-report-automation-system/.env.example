# =============================================================================
# AI自動レポート生成システム - 環境変数設定テンプレート
# 黒瀬理央のAI研究室 - AIシステム開発シリーズ
# =============================================================================

# アプリケーション基本設定
NODE_ENV=development
PORT=3000
APP_NAME=AI Report Automation System
APP_VERSION=1.0.0
DEBUG=true

# =============================================================================
# AI API設定
# =============================================================================

# OpenAI (ChatGPT) API
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic (Claude) API
CLAUDE_API_KEY=sk-ant-your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4000

# Google AI (Gemini) API
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-pro
GOOGLE_PROJECT_ID=your_google_project_id

# =============================================================================
# Google Services設定
# =============================================================================

# Google Apps Script
GOOGLE_APPS_SCRIPT_ID=your_apps_script_id_here
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here

# Google Sheets API
GOOGLE_SHEETS_API_KEY=your_sheets_api_key_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"

# Google Charts設定
GOOGLE_CHARTS_API_KEY=your_charts_api_key_here

# =============================================================================
# 外部サービス連携
# =============================================================================

# Zapier Webhooks
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_webhook_id/
ZAPIER_API_KEY=your_zapier_api_key_here

# Make.com (旧Integromat)
MAKE_WEBHOOK_URL=https://hook.integromat.com/your_webhook_id
MAKE_API_TOKEN=your_make_api_token_here

# Canva API
CANVA_API_TOKEN=your_canva_api_token_here
CANVA_BRAND_ID=your_canva_brand_id_here
CANVA_DESIGN_TYPE=presentation

# =============================================================================
# データベース設定
# =============================================================================

# MongoDB (分析結果保存用)
MONGODB_URI=mongodb://localhost:27017/ai_report_system
MONGODB_DATABASE=ai_reports
MONGODB_COLLECTION_REPORTS=generated_reports
MONGODB_COLLECTION_LOGS=system_logs

# Redis (キャッシュ用)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# PostgreSQL (メタデータ管理用)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=ai_system
POSTGRES_USERNAME=your_postgres_username
POSTGRES_PASSWORD=your_postgres_password

# =============================================================================
# セキュリティ設定
# =============================================================================

# JWT認証
JWT_SECRET=your_super_secret_jwt_key_here_must_be_very_long
JWT_EXPIRES_IN=24h
JWT_ISSUER=ai-report-system

# API認証
API_SECRET_KEY=your_api_secret_key_here
WEBHOOK_SECRET=your_webhook_verification_secret

# CORS設定
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# =============================================================================
# ファイル・ストレージ設定
# =============================================================================

# ローカルストレージ
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
OUTPUT_DIR=./reports/output
BACKUP_DIR=./backups

# AWS S3 (オプション)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# メール・通知設定
# =============================================================================

# SMTP設定 (レポート送信用)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_NAME=AI Report System
SMTP_FROM_EMAIL=noreply@yourcompany.com

# Slack通知 (オプション)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_CHANNEL=#ai-reports
SLACK_USERNAME=AI Report Bot

# =============================================================================
# パフォーマンス・制限設定
# =============================================================================

# レート制限
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API制限
MAX_FILE_SIZE=10485760
MAX_REQUEST_SIZE=52428800
REQUEST_TIMEOUT=30000

# 同時処理制限
MAX_CONCURRENT_REPORTS=5
MAX_QUEUE_SIZE=50

# キャッシュ設定
CACHE_TTL=3600
ENABLE_CACHE=true

# =============================================================================
# ログ・監視設定
# =============================================================================

# ログレベル
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true

# エラー追跡 (Sentry)
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
SENTRY_ENVIRONMENT=development

# メトリクス
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# 開発・デバッグ設定
# =============================================================================

# デバッグ機能
ENABLE_DEBUG_ROUTES=true
ENABLE_MOCK_RESPONSES=false
SKIP_API_VALIDATION=false

# テスト設定
TEST_DATABASE_URL=mongodb://localhost:27017/ai_report_system_test
TEST_SKIP_EXTERNAL_APIS=true

# =============================================================================
# 業界特化設定
# =============================================================================

# デフォルト業界テンプレート
DEFAULT_INDUSTRY=general
SUPPORTED_INDUSTRIES=finance,healthcare,retail,manufacturing,education

# 地域・言語設定
DEFAULT_LANGUAGE=ja
DEFAULT_TIMEZONE=Asia/Tokyo
DEFAULT_CURRENCY=JPY

# =============================================================================
# コスト最適化設定
# =============================================================================

# AI API使用制限
DAILY_API_CALL_LIMIT=1000
MONTHLY_BUDGET_LIMIT=10000
COST_ALERT_THRESHOLD=8000

# 自動最適化
ENABLE_AUTO_OPTIMIZATION=true
OPTIMIZE_PROMPTS=true
USE_CACHE_FIRST=true

# =============================================================================
# 重要な注意事項
# =============================================================================
# 1. 本番環境では .env.production を使用してください
# 2. APIキーは絶対に公開リポジトリにコミットしないでください
# 3. 定期的にAPIキーをローテーションしてください
# 4. 最小権限の原則に従ってAPIキーの権限を設定してください
# 5. セキュリティ監査を定期的に実施してください
